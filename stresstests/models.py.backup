from django.db import models
from django.utils import timezone
from servers.models import Server


class Test(models.Model):
    """
    Basis-Model für alle Test-Typen.
    Das test_type Feld bestimmt, welche zusätzlichen Felder relevant sind.
    """
    TEST_TYPES = [
        ('monitoring', 'Server Monitoring'),
        ('stress', 'Stress Test'),
        ('latency', 'Latency Check'),
    ]
    
    STATUS_CHOICES = [
        ('inactive', 'Inaktiv'),
        ('active', 'Aktiv'),
        ('running', 'Läuft'),
        ('paused', 'Pausiert'),
        ('completed', 'Abgeschlossen'),
        ('failed', 'Fehlgeschlagen'),
    ]

    # === Basis-Felder (alle Test-Typen) ===
    name = models.CharField(max_length=200)
    description = models.TextField(blank=True)
    test_type = models.CharField(max_length=20, choices=TEST_TYPES, default='monitoring')
    status = models.CharField(max_length=20, choices=STATUS_CHOICES, default='inactive')
    
    # Server-Auswahl
    servers = models.ManyToManyField(Server, related_name='tests', blank=True)
    test_all_active_servers = models.BooleanField(default=False, help_text="Alle aktiven Server testen")
    
    # Zeitstempel
    created_at = models.DateTimeField(auto_now_add=True)
    updated_at = models.DateTimeField(auto_now=True)
    started_at = models.DateTimeField(null=True, blank=True)
    last_run = models.DateTimeField(null=True, blank=True)
    
    # Statistiken (werden automatisch aktualisiert)
    total_runs = models.PositiveIntegerField(default=0)
    successful_runs = models.PositiveIntegerField(default=0)
    failed_runs = models.PositiveIntegerField(default=0)

    # === Server Monitoring Felder ===
    interval_minutes = models.PositiveIntegerField(default=5, help_text="Check-Intervall in Minuten")
    
    # === Stress Test Felder ===
    num_clients = models.PositiveIntegerField(default=2)
    duration_seconds = models.PositiveIntegerField(default=60)
    message_interval_seconds = models.PositiveIntegerField(default=5)
    
    # === Stress Test Ergebnisse ===
    messages_sent = models.PositiveIntegerField(default=0)
    messages_received = models.PositiveIntegerField(default=0)
    avg_latency_ms = models.FloatField(null=True, blank=True)
    min_latency_ms = models.FloatField(null=True, blank=True)
    max_latency_ms = models.FloatField(null=True, blank=True)

    # === InfluxDB/Grafana ===
    write_to_influxdb = models.BooleanField(default=True, help_text="Metriken nach InfluxDB schreiben")
    influxdb_measurement = models.CharField(max_length=100, default='server_monitoring')

    class Meta:
        ordering = ['-created_at']
        verbose_name = 'Test'
        verbose_name_plural = 'Tests'

    def __str__(self):
        return f"{self.name} ({self.get_test_type_display()})"

    @property
    def delivery_rate(self):
        if self.messages_sent == 0:
            return 0
        return round((self.messages_received / self.messages_sent) * 100, 1)

    @property
    def success_rate(self):
        if self.total_runs == 0:
            return None
        return round((self.successful_runs / self.total_runs) * 100, 1)

    @property
    def is_active(self):
        return self.status in ['active', 'running']

    @property
    def target_servers(self):
        """Gibt die Server zurück die getestet werden sollen"""
        if self.test_all_active_servers:
            return Server.objects.filter(is_active=True, maintenance_mode=False)
        return self.servers.filter(is_active=True, maintenance_mode=False)

    def activate(self):
        """Test aktivieren"""
        self.status = 'active'
        self.started_at = timezone.now()
        self.save()

    def deactivate(self):
        """Test deaktivieren"""
        self.status = 'inactive'
        self.save()

    def pause(self):
        """Test pausieren"""
        self.status = 'paused'
        self.save()

    def record_run(self, success: bool):
        """Eine Test-Ausführung protokollieren"""
        self.total_runs += 1
        if success:
            self.successful_runs += 1
        else:
            self.failed_runs += 1
        self.last_run = timezone.now()
        self.save(update_fields=['total_runs', 'successful_runs', 'failed_runs', 'last_run'])


class TestResult(models.Model):
    """
    Einzelnes Test-Ergebnis für einen Server.
    Speichert jede Messung für die UI-Anzeige.
    (InfluxDB speichert die Zeitreihen-Daten für Grafana)
    """
    test = models.ForeignKey(Test, on_delete=models.CASCADE, related_name='results')
    server = models.ForeignKey(Server, on_delete=models.CASCADE, related_name='test_results')
    
    timestamp = models.DateTimeField(auto_now_add=True, db_index=True)
    
    # Ergebnis
    success = models.BooleanField(default=False)
    latency_ms = models.IntegerField(null=True, blank=True)
    error_message = models.TextField(blank=True, null=True, default="")
    
    # Zusätzliche Infos
    used_tor = models.BooleanField(default=False)
    tls_version = models.CharField(max_length=20, blank=True)

    class Meta:
        ordering = ['-timestamp']
        indexes = [
            models.Index(fields=['test', '-timestamp']),
            models.Index(fields=['server', '-timestamp']),
        ]

    def __str__(self):
        status = "✓" if self.success else "✗"
        return f"{status} {self.server.name} @ {self.timestamp:%H:%M:%S}"


# Legacy-Kompatibilität: Alias für alten Code
class TestRun(Test):
    """Alias für Abwärtskompatibilität"""
    class Meta:
        proxy = True


class Metric(models.Model):
    """Echtzeit-Metriken während eines Tests (für WebSocket-Updates)"""
    test = models.ForeignKey(Test, on_delete=models.CASCADE, related_name='metrics')
    timestamp = models.DateTimeField(auto_now_add=True)
    metric_type = models.CharField(max_length=50)  # latency, sent, received, error, status
    value = models.FloatField()
    server_id = models.IntegerField(null=True, blank=True)
    client_id = models.CharField(max_length=50, null=True, blank=True)
    details = models.JSONField(null=True, blank=True)

    class Meta:
        ordering = ['-timestamp']
